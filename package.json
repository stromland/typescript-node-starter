{
  "name": "typescript-node-starter",
  "version": "1.0.0",
  "description": "",
  "author": "Espen Str√∏mland",
  "license": "MIT",
  "main": "./lib/index.js",
  "scripts": {
    "prestart": "run-s clean",
    "start": "run-p build:watch serve",
    "serve": "nodemon",
    "prebuild": "run-s -l clean lint",
    "build": "run-p -l build:lib types",
    "build:lib": "babel src --env-name build --out-dir lib --extensions '.ts'",
    "build:watch": "npm run build:lib -- --watch",
    "types": "tsc",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint --ext .ts ./src",
    "lint:fix": "eslint --fix --ext .ts ./src",
    "clean": "rimraf lib *.tgz coverage"
  },
  "devDependencies": {
    "@babel/cli": "7.11.6",
    "@babel/core": "7.11.6",
    "@babel/plugin-proposal-class-properties": "7.10.4",
    "@babel/preset-env": "7.11.5",
    "@babel/preset-typescript": "7.10.4",
    "@types/jest": "26.0.14",
    "@types/node": "14.11.2",
    "@typescript-eslint/eslint-plugin": "4.2.0",
    "@typescript-eslint/parser": "4.2.0",
    "eslint": "7.9.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-prettier": "3.1.4",
    "jest": "26.4.2",
    "nodemon": "2.0.4",
    "npm-run-all": "4.1.5",
    "prettier": "2.1.2",
    "rimraf": "3.0.2",
    "typescript": "4.0.3"
  },
  "prettier": {
    "singleQuote": true
  },
  "nodemonConfig": {
    "runOnChangeOnly": true,
    "watch": "lib/**/*",
    "exec": "node lib/index.js",
    "delay": 200,
    "ext": "*.js"
  }
}
